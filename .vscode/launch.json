{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "TestGyver: Flask Debug",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}",
            "env": {
                "FLASK_APP": "app",
                "FLASK_ENV": "development",
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "run",
                "--host=0.0.0.0",
                "--port=5000"
            ],
            "jinja": true,
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "TestGyver: Init Database",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/init/init_database.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}
