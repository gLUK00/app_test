{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "TestGyver: Flask Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "jinja": true
        },
        {
            "name": "TestGyver: Init Database",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/init/init_database.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}
